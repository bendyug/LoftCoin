<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/from_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/from_currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/converter_default_price"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textAppearance="?attr/textAppearanceHeadline2" />

        <ImageView
            android:id="@+id/from_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />

        <TextView
            android:id="@+id/from_coin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:gravity="end|center_vertical"
            android:minEms="4"
            android:textAppearance="?attr/textAppearanceHeadline4" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/to_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/to_currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/converter_default_price"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textAppearance="?attr/textAppearanceHeadline2" />

        <ImageView
            android:id="@+id/to_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />

        <TextView
            android:id="@+id/to_coin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:gravity="end|center_vertical"
            android:minEms="4"
            android:textAppearance="?attr/textAppearanceHeadline4" />

    </LinearLayout>

</LinearLayout>